# Core shell and terminal
brew "fish"              # Our main shell
brew "starship"          # Fast, beautiful prompt

# Essential command-line tools
brew "git"
brew "wget"
brew "curl"
brew "tree"
brew "htop"
brew "btop"             # Modern htop replacement
brew "jq"               # JSON processor
brew "yq"               # YAML processor

# Modern replacements for classic tools
brew "eza"              # Better ls (exa replacement)
brew "bat"              # Better cat with syntax highlighting
brew "fd"               # Better find
brew "ripgrep"          # Better grep
brew "fzf"              # Fuzzy finder
brew "zoxide"           # Smart cd replacement
brew "tldr"             # Simplified man pages

# Development tools
brew "gh"               # GitHub CLI
brew "glab"             # GitLab CLI
brew "diff-so-fancy"    # Better git diffs
brew "git-delta"        # Even better git diffs

# Programming languages and version managers
brew "go"
brew "python@3.11"
brew "python@3.12"
brew "pyenv"
brew "fnm"              # Fast Node Manager (better than nvm)
brew "ruby"
brew "rbenv"

# Node.js ecosystem
